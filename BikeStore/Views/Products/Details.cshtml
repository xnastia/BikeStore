@model BikeStore.Models.Product

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Product</legend>

    <div class="display-label">
        <i>Category Name:</i> @Html.DisplayFor(model => model.Category.Name)

    </div>
    <div class="display-label">
        <i>Vendor Name:</i> @Html.DisplayFor(model => model.Vendor.Name)

    </div>

    <div class="display-label">
        <i>Product Name:</i> @Html.DisplayFor(model => model.Name)

    </div>
    <div class="display-label">
        <i>Product Price:</i> @Html.DisplayFor(model => model.Price)
    </div>

    <div>
        @Html.DisplayFor(model => model.Description)
    </div>
    
</fieldset>
<p>  
    @Html.ActionLink("Back to List", "Index")
</p>
<h3>
    Comments
     </h3>
<div id="comments">
@foreach (var comment in ViewBag.Comments) {
    <div>
        <strong>@comment.UserName</strong> <i>@comment.Rating</i>
        @comment.Message
     </div>
            }
        </div>
<hr/>
<h3>New coment
</h3>
<div id="add-comment">
    <form action="/Comments/Create" method="post">
        @Html.AntiForgeryToken()

        <input name="ProductId" type="hidden" value="@ViewBag.ProductId" />
        <div class="form-group">
           
            <input name="UserName" type="text" class="form-control" placeholder="Username">
        </div>
        
        <div class="form-group">
            <select name="Rating" class="form-control">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <div class="form-group">
            
            <textarea name="Message" class="form-control" placeholder="Enter your mesage...."></textarea>
        </div>
        <input type="submit" class="btn btn-succes" value="Add comment" />
    </form>
</div>